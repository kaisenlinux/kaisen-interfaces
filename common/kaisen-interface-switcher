        cp -rp /usr/share/kaisen-interface-switcher/$users/MATE/* /home/$users/.config/ 2> /dev/null || cp -rp /etc/skel/.config/{dconf,mate,gtkrc,gtkrc-2.0,gtk-2.0,gtk-3.0,gtk-4.0} /home/$users/.config/ 2> /dev/null || true
